@{
  Layout = "_Layout";
}

@using ProjectVendor.Models;

<h1>Orders</h1>

@if (@Model.Count == 0)
{
  <h3>No Orders have been added yet!</h3>
}
<p> Below is information regarding the order:</p>
<h2>@Model["vendor"].Name</h2>
<h3>Order: @Model["order"].Name, @Model["order"].Description</h3>
<h3>Quantity: @Model["order"].Quantity</h3>
<h3>Total cost:$ @Model["order"].Cost</h3>

<p><a href='/'>Back home</a></p>
<p><a href="/vendors">Back to Vendors.</a></p>
<p><a href='/vendors/@Model["vendor"].Id/order/new'>Add another order</a> </p>