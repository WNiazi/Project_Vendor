@{
  Layout = "_Layout";
}

@using ProjectVendor.Models;

<h2> Information for @Model["vendor"].Name's order.</h2>
<ol>
  @foreach (Order order in @Model["order"])
  {
    <a href='/vendors/@Model["vendor"].Id/order/@order.Id'></a>
    <p>Description : @order.Description</p>
    <p>Cost: $ @order.Cost</p>
    <p>Quantity: @order.Quantity</p>
  }
</ol>

<a href='/vendors/@Model["vendor"].Id/order/new'>Adding new Order</a>
