@{
  Layout = "_Layout";
}
@using ProjectVendor.Models;

<h1>Vendors</h1>
@if (Model.Count == 0)
{
  <p>There are no vendors in the list.</p>
}
<ul>
  @foreach (Vendor vendor in Model)
  {
    <table class="table">
      <thead>
        <tr>
          <th scope="col">Name</th>
          <th scope="col">Type of Vendor</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td><a href='/vendors/@vendor.Id'>@vendor.Name</a></td>
          <td><a href='/vendors/@vendor.Id'>@vendor.TypeOfVendor</a></td>
        </tr>
      </tbody>
    </table>

    <li><a href="/vendors/new">Add a new vendors.</a> </li>
  }

  <form action="/vendors/delete" method="post">
    <button type="submit" name="button">Clear All Vendors</button>
  </form>

  <p><a href='/'> Home </a> </p>
